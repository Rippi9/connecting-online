{{!-- Dashboard elements --}}

{{!-- Header Bar --}}
<nav class="navbar navbar-expand-lg navbar-light bg-light align-middle fixed-top">
  <img src="/photos/Valorant-Logo.png" class="nav-logo" alt="valorant logo">
  <img src="/photos/CSGO-Logo.png" class="nav-logo nav-logo-csgo" alt="csgo logo">
  <p class="navbar-brand">UNIFIED GG</p>
  <img src="/photos/Destiny-Logo.png" class="nav-logo" alt="destiny logo">
  <img src="/photos/League-Logo.png" class="nav-logo" alt="league logo">
</nav>







      
    
    <!-- main content -->
    <div class="container-fluid">
    <div class="row flex-wrap">
        <div class="col-md-9">
            <div class="card" style="margin-top: 20px; margin-right: 10px; margin-bottom: 20px; margin-left: 10px;">
                <h3 class="card-header text-center card-header-clan">
                    Open Groups
                </h3>
                <div class="card-body" style="overflow-y: scroll; max-height: 600px;">
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        {{#each clans as |clan index| }}
                            <div class="col col-clan">
                                <div class="card h-100">
                                    <div class="card-header text-center">
                                        <a href="/clan/">Group {{clan.id}} - {{clan.name}}</a>
                                    </div>
                                    <div class="card-body">
                                        <p class="text-dark"><strong> Game:</strong> {{clan.game}}</p>
                                        <p class="text-dark"><strong>Platform:</strong> {{clan.platform}}</p>
                                        <p class="text-dark"><strong>Region:</strong> {{clan.region}}</p>
                                        <p class="text-dark"><strong>Players Needed:</strong> {{clan.playercount}}</p>
                                        <p class="text-dark"><strong>Description:</strong> {{clan.description}}</p>
                                        <p class="text-dark">Created by {{clan.creator.username}} on {{clan.createdAt}}</p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>


            <!-- Group -->
            <div class="col-md-3">
                <div class="card" style="margin-top: 20px; margin-right: 10px; margin-bottom: 20px;">
                    <div id="group" class="card-header text-center">
                        <h3 id="group_name">Create Group</h3>
                    </div>
                    <!-- select a game dropdown list -->
                    <div class="card-body">
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            <option selected>Select a Game</option>
                            <option value="1">Valorant</option>
                            <option value="2">CSGO</option>
                            <option value="3">Destiny</option>
                            <option value="4">LoL</option>
                        </select>
                        <!-- select platform dropdown list -->
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            <option selected>Select a Platform</option>
                            <option value="1">PC</option>
                            <option value="2">PS</option>
                            <option value="3">Xbox</option>
                        </select>

                        <!-- select region dropdown list -->
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            <option selected>Select a Region</option>
                            <option value="1">Oceania</option>
                            <option value="2">North America</option>
                            <option value="3">South America</option>
                            <option value="4">Asia</option>
                            <option value="5">Africa</option>
                            <option value="6">Europe</option>
                        </select>

                        <!-- select no# player dropdown list -->
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                            <option selected>Players Required</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                        </select>

                        <div class="mb-3">

                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"
                            placeholder="Please add more info to your group post so people know what you're looking for! (i.e. mic required etc)"></textarea>
                        </div>
              
                            <!-- Button -->
                            <button type="button" class="btn btn-primary" id="post_button">POST GROUP</button>
                        </div>
                    </div>
                </div>
            </div> <!-- end of outer row -->
    </div>
    </div>

